<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#C4C4C4"
    android:fillViewport="true"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".Myprofilef">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="match_parent"

            android:background="@drawable/custom_login"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/avt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="30dp"

                android:layout_marginRight="125dp"
                android:fontFamily="@font/gilroy_medium"

                android:gravity="center"
                android:text="My Profile"
                android:textSize="32dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Detail"
                android:textSize="14dp"
                android:layout_marginLeft="30dp"
                android:textColor="#B0B0B0"
                android:layout_marginTop="10dp"/>

            <RelativeLayout
                android:background="@drawable/custom_profile"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:text="Full Name"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/gilroy_medium"
                    android:textColor="#B0B0B0"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tv1"
                    android:textSize="20sp"
                    android:text="Bui Tuan Anh"
                    android:layout_marginRight="70dp"
                    android:layout_marginBottom="25dp"
                    android:fontFamily="@font/gilroy_medium"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"/>
            </RelativeLayout>
            <RelativeLayout
                android:background="@drawable/custom_profile"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:text="Phone"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/gilroy_medium"
                    android:textColor="#B0B0B0"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tv2"
                    android:textSize="20sp"
                    android:text="038 386 5954"
                    android:layout_marginRight="70dp"
                    android:layout_marginBottom="25dp"
                    android:fontFamily="@font/gilroy_medium"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"/>
            </RelativeLayout>
            <RelativeLayout
                android:background="@drawable/custom_profile"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:text="Email"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/gilroy_medium"
                    android:textColor="#B0B0B0"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tv3"
                    android:textSize="20sp"
                    android:text="Tuananh25102002p@gmail.com"
                    android:layout_marginRight="70dp"
                    android:layout_marginBottom="25dp"
                    android:fontFamily="@font/gilroy_medium"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"/>
            </RelativeLayout>
            <RelativeLayout
                android:background="@drawable/custom_profile"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:text="Full Name"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/gilroy_medium"
                    android:textColor="#B0B0B0"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tv4"
                    android:textSize="20sp"
                    android:layout_marginRight="70dp"
                    android:text="Xuan Hoa, Xuan Truong, Nam Dinh"
                    android:layout_marginBottom="25dp"
                    android:fontFamily="@font/gilroy_medium"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"/>
            </RelativeLayout>



            <Button
                android:id="@+id/btnlogout"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/custom_btnlogin"
                android:elevation="20dp"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="center"
                android:stateListAnimator="@null"
                android:text="Log Out"
                android:textSize="23dp"
                app:backgroundTint="@null" />


        </LinearLayout>




</ScrollView>