<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:id="@+id/img"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/oval" >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imgmonan"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/clasico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/img"
            android:fontFamily="@font/gilroy_medium"
            android:text="Clasico"
            android:textSize="23dp" />

        <TextView
            android:id="@id/tenmongh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clasico"
            android:layout_toRightOf="@id/img"
            android:fontFamily="@font/gilroy_medium"
            android:text="Mixed Piiza" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tenmongh"
            android:layout_toRightOf="@id/img"
            android:id="@+id/giatiengh"
            android:fontFamily="@font/gilroy_medium"
            android:text="$7.90"
            android:textSize="23dp" />
    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"

        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/soluong"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:background="@drawable/custom_pickkernumber"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/cong"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/custom_numberpicker1"
            android:gravity="center"
            android:text="+"
            android:textSize="29dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tru"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/custom_numberpicker1"
            android:gravity="center"
            android:text="-"
            android:textSize="29dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>