<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="400dp"
    android:background="@color/white"
    android:layout_marginRight="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:background="#FAFBFD"
        android:layout_width="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_height="match_parent">
        <TextView
            android:fontFamily="@font/gilroy_medium"
            android:id="@+id/calo"
            android:textColor="#272727"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:drawableLeft="@drawable/cal"
            android:text="78 Calories"/>
        <ImageView
            android:id="@+id/tt"
            android:layout_marginRight="20dp"
            android:layout_width="30dp"
            android:layout_alignParentRight="true"
            android:layout_height="30dp"
            android:src="@drawable/tt"
            android:layout_above="@id/cardviewimg"



            />

        <androidx.cardview.widget.CardView
            android:layout_marginTop="30dp"
            android:layout_below="@+id/calo"
            android:id="@+id/cardviewimg"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            app:cardCornerRadius="70dp"
            android:layout_height="150dp">
            <ImageView
                android:id="@+id/imgmonan"
                android:scaleType="centerInside"
                android:layout_width="match_parent"
                android:src="@drawable/logo"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="23sp"
            android:id="@+id/tv1"
            android:textColor="#272727"
            android:layout_below="@+id/cardviewimg"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/gilroy_medium"
            android:layout_height="wrap_content"
            android:text="Món ăn"/>
        <TextView
            android:id="@+id/tenmon"
            android:layout_alignParentLeft="true"

            android:layout_marginTop="5dp"
            android:fontFamily="@font/gilroy_medium"
            android:layout_width="180dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/tv1"
            android:textColor="#9C9C9C"
            android:layout_height="wrap_content"
            android:text="Piza thập cẩm phô mai"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text="$7,99"
            android:textSize="23dp"
            android:layout_below="@+id/tenmon"
            android:layout_marginTop="5dp"
            android:id="@+id/gia"/>




    </RelativeLayout>
    <ImageView
        android:layout_marginRight="30dp"
        android:id="@+id/info"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerInside"
        android:src="@drawable/deltai"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>