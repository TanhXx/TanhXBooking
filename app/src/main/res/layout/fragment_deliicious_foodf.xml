<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".DeliiciousFoodf">
    <include layout="@layout/blogin"/>

  <RelativeLayout
      
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <ImageView
          android:layout_alignParentTop="true"

          android:layout_alignParentLeft="true"
          android:layout_alignParentRight="true"
          android:layout_width="wrap_content"
          android:src="@drawable/food_bg"
          android:layout_height="wrap_content"/>

      <ImageView

          android:src="@drawable/logo"
          android:layout_width="282dp"
          android:id="@+id/mask_gr"
          android:layout_marginLeft="51dp"
          android:layout_marginRight="50dp"
          android:scaleType="centerInside"
          android:layout_marginTop="100dp"
          android:layout_alignParentRight="true"
          android:layout_alignParentLeft="true"
          android:layout_height="282dp"/>

      <ImageView
          android:src="@drawable/sllider_element"
          android:layout_width="61dp"
          android:id="@+id/line"
          android:layout_alignParentRight="true"
          android:layout_alignParentLeft="true"
          android:layout_marginLeft="176dp"
          android:layout_marginTop="450dp"
          android:layout_marginRight="177dp"
          android:layout_height="3dp"/>

      <TextView
          android:id="@+id/tv1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentRight="true"
          android:layout_marginLeft="3dp"
          android:layout_marginTop="500dp"
          android:layout_marginRight="-3dp"
          android:fontFamily="@font/gilroy_medium"
          android:gravity="center"
          android:text="Vệ sinh - an toàn thực phẩm"
          android:textColor="#272727"
          android:textSize="24dp" />

      <TextView
          android:layout_below="@+id/tv1"
          android:fontFamily="@font/gilroy_medium"
          android:layout_alignParentLeft="true"
          android:layout_marginTop="5dp"
          android:gravity="center"
          android:id="@+id/tv2"
          android:textColor="#AFAFAF"
          android:layout_marginLeft="63dp"
          android:layout_marginRight="63dp"
          android:layout_alignParentRight="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="24dp"
          android:text="TanhX - Đầu bếp riêng của mỗi gia đình"/>

      <androidx.cardview.widget.CardView
          android:layout_marginTop="50dp"
          android:layout_width="wrap_content"
          android:layout_below="@+id/tv2"
          android:background="#FAFBFD"
          android:layout_height="wrap_content"
          app:cardCornerRadius="30dp"
          android:layout_centerHorizontal="true">
          <ImageView
              android:id="@+id/btnnextdeli"
              android:layout_width="63dp"
              android:layout_height="63dp"
              android:src="@drawable/next"
              android:scaleType="centerInside"
              />

      </androidx.cardview.widget.CardView>

  </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>