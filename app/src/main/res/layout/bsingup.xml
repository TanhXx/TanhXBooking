<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Singupb">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="match_parent"
            android:layout_marginTop="121dp"
            android:background="@drawable/custom_login"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="77dp"
                android:layout_marginRight="125dp"
                android:fontFamily="@font/gilroy_medium"

                android:gravity="center"
                android:text="Đăng ký"
                android:textSize="32dp" />

            <EditText
                android:fontFamily="@font/gilroy_medium"
                android:id="@+id/tk"
                style="@style/NoUnderlineEditText"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/custom_edtlog"
                android:hint="Tài Khoản"
                android:paddingStart="30dp"
                android:textColorHint="#B0B0B0" />

            <EditText
                android:fontFamily="@font/gilroy_medium"
                android:id="@+id/email"
                style="@style/NoUnderlineEditText"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/custom_edtlog"
                android:hint="Email"
                android:paddingStart="30dp"
                android:textColorHint="#B0B0B0" />

            <EditText
                android:fontFamily="@font/gilroy_medium"
                android:inputType="number"
                android:id="@+id/sdt"
                style="@style/NoUnderlineEditText"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/custom_edtlog"
                android:hint="Số điện thoại"
                android:paddingStart="30dp"
                android:textColorHint="#B0B0B0" />

            <EditText
                android:fontFamily="@font/gilroy_medium"
                android:inputType="textPassword"
                android:id="@+id/mk"
                style="@style/NoUnderlineEditText"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/custom_edtlog"
                android:hint="Mật Khẩu"
                android:paddingStart="30dp"
                android:textColorHint="#B0B0B0" />

            <Button
                android:layout_width="match_parent"
                android:elevation="20dp"
                android:id="@+id/dk"
                android:stateListAnimator="@null"
                android:layout_height="73dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/custom_btnlogin"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="center"
                android:text="Đăng ký"
                android:textSize="23dp"
                app:backgroundTint="@null" />


            <TextView
                android:id="@+id/login"
                android:fontFamily="@font/avenir1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:text="@string/idonthavesingin"
                android:textSize="17dp" />





        </LinearLayout>


<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_marginLeft="152dp"
    android:layout_marginRight="152dp"
    android:layout_height="100dp"
    android:layout_alignParentRight="true"
    android:layout_alignParentLeft="true"
    android:layout_marginTop="70dp"
    android:layout_centerHorizontal="true"
    app:cardCornerRadius="60dp"
    >

       <ImageView
           android:scaleType="centerInside"
           android:src="@drawable/avt1"
           android:layout_width="match_parent"
           android:layout_height="match_parent"/>

</androidx.cardview.widget.CardView>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>