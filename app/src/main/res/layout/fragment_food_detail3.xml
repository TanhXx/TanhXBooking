<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".FoodDetail3">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="@drawable/custom_layout">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/backwhite"
                android:id="@+id/back"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="40dp"/>
            <ImageView
                android:id="@+id/tym"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:src="@drawable/loved" />

            <TextView
                android:id="@+id/mexico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Mexico"
                android:textColor="@color/white"
                android:textSize="36dp" />

            <TextView
                android:id="@+id/calo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/gia"
                android:layout_centerInParent="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/cal"
                android:text=" 78 Caloris"
                android:textColor="@color/white"

                android:textSize="18dp" />

            <TextView
                android:id="@+id/gia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/gilroy_medium"
                android:text="$7,90"
                android:textColor="@color/white"
                android:textSize="26dp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="40dp"
            android:layout_weight="3">
            <TextView
                android:textColor="#343333"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:id="@+id/mta"
                android:fontFamily="@font/gilroy_medium"
                android:layout_height="wrap_content"
                android:text="Mô tả"/>
            <TextView
                android:layout_marginRight="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#BFBBBB"
                android:id="@+id/mtct"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:text="It is a long established fact that a reader will be distracted by the readable content of a page "
                android:layout_below="@+id/mta"/>
            <TextView
                android:textColor="#343333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mtct"
                android:text="Thêm topping"
                android:id="@+id/ttp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/avenir1"
                android:textSize="18sp"
                />
            <LinearLayout

                android:layout_marginTop="30dp"
                android:layout_marginRight="40dp"
                android:id="@+id/ln"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_below="@+id/ttp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/hattieu"
                    android:backgroundTint="#EDE5E5"
                    android:layout_width="wrap_content"
                    android:text="Hạt Tiêu"
                    android:textColor="#343333"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/cachua"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:textColor="#343333"
                    android:backgroundTint="#EDE5E5"
                    android:layout_width="wrap_content"
                    android:text="Cà chua"
                    android:layout_height="wrap_content"/>
                <Button
                    android:textColor="#343333"
                    android:backgroundTint="#EDE5E5"
                    android:layout_width="wrap_content"
                    android:text="Khoai tây"
                    android:id="@+id/khoaitay"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="100dp"

        android:layout_height="100dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="20dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/soluong"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:background="@drawable/custom_pickkernumber"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tru"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/custom_numberpicker1"
            android:gravity="center"
            android:text="-"
            android:textSize="29dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cong" />

        <TextView
            android:id="@+id/cong"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/custom_numberpicker1"
            android:gravity="center"
            android:text="+"
            android:textSize="29dp"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>