<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bforgot">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="match_parent"
            android:layout_marginTop="121dp"
            android:background="@drawable/custom_login"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="57dp"
                android:layout_marginRight="125dp"
                android:fontFamily="@font/gilroy_medium"

                android:gravity="center"
                android:text="Quên mật khẩu"
                android:textSize="32dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhập số điện thoại"
                android:textSize="14dp"
                android:layout_marginLeft="30dp"
                android:textColor="#B0B0B0"
                android:layout_marginTop="10dp"/>

            <EditText
                android:inputType="number"
                android:fontFamily="@font/gilroy_medium"
                android:id="@+id/mk"
                style="@style/NoUnderlineEditText"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/custom_edtlog"
                android:hint="Số điện thoại"
                android:paddingStart="30dp"
                android:textColorHint="#B0B0B0" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/custom_btnlogin"
                android:elevation="20dp"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="center"
                android:stateListAnimator="@null"
                android:text="Xác nhận"
                android:textSize="23dp"
                app:backgroundTint="@null" />


        </LinearLayout>




        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="85dp"
            android:src="@drawable/forgot"/>
        <ImageView
            android:id="@+id/back"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:scaleType="centerInside"
            android:layout_height="wrap_content"
            android:src="@drawable/returnforgot"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>