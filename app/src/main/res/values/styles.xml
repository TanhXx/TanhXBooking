<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Phong cách tùy chỉnh để loại bỏ thanh gạch ngang -->
    <style name="NoUnderlineEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="colorPrimary">#000000</item>

        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight"> 1000dp</item>
    </style>

    <style name="MyCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlNormal">@color/red</item>
        <item name="android:colorControlActivated">@color/red</item>
        <item name="color">@color/red</item>
        <item name="android:buttonTint">@color/red</item>
    </style>


</resources>
